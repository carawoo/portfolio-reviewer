rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 면접 기록 컬렉션
    match /interviews/{interview} {
      // 모든 사용자가 자신의 면접 기록을 생성할 수 있음 (익명)
      allow create: if true;

      // 읽기 허용 (관리자 페이지용)
      // TODO: 추후 Firebase Auth로 특정 관리자만 읽을 수 있도록 변경 필요
      allow read: if true;

      // 수정/삭제는 불가
      allow update, delete: if false;
    }
  }
}
